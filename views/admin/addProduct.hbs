 <script>

 

function validateName() {
  const nameInput = document.getElementById("name");
  const nameError = document.getElementById("nameError");
  const nameRegex = /^[a-zA-Z\s]+$/;
  const name = nameInput.value.trim();
  if (!nameRegex.test(name)) {
    nameInput.classList.add("is-invalid");
    nameInput.classList.remove("is-valid");
    nameError.textContent = "Product name can only contain alphabets and spaces!";
    return false;
  } else {
    nameInput.classList.add("is-valid");
    nameInput.classList.remove("is-invalid");
    nameError.textContent = "";
    return true;
  }
}




const priceInput = document.querySelector('#price');
const priceError = document.querySelector('#priceError');

priceInput.addEventListener('keyup', function() {
  const regex = /^\$?\d+(\.\d{1,2})?$/; // regular expression to match currency format with up to 2 decimal places
  const isValid = regex.test(priceInput.value);

  if (!isValid) {
    priceInput.classList.add('is-invalid');
    priceError.textContent = 'Please enter a valid price.';
  } else {
    priceInput.classList.remove('is-invalid');
    priceError.textContent = '';
  }
});

const qtyInput = document.querySelector('#quantity');
const qtyError = document.querySelector('#qtyError');

qtyInput.addEventListener('keyup', function() {
  const regex = /^\d+$/; // regular expression to match only digits
  const isValid = regex.test(qtyInput.value);

  if (!isValid) {
    qtyInput.classList.add('is-invalid');
    qtyError.textContent = 'Please enter only digits.';
  } else {
    qtyInput.classList.remove('is-invalid');
    qtyError.textContent = '';
  }
});

const form = document.getElementById('myForm');
const submitBtn = document.getElementById('submitBtn');

submitBtn.addEventListener('click', function(e) {
  // Prevent the form from submitting if validation fails
  e.preventDefault();

  // Check if all fields are filled out
  if (form.checkValidity()) {
    // Show a success message with SweetAlert
    Swal.fire({
      icon: 'success',
      title: 'Success!',
      text: 'Product added successfully',
      confirmButtonText: 'OK',
    }).then((result) => {
      // If the user clicks on the "OK" button, submit the form
      if (result.isConfirmed) {
        form.submit();
      }
    });
    
  } else {
    // Show an error message with SweetAlert
    Swal.fire({
      icon: 'error',
      title: 'Oops...',
      text: 'Please fill out all fields.',
    });
  }
  
  // Clear any previous error messages after a delay
  setTimeout(() => {
    document.getElementById('err').innerHTML = '';
  }, 2500);
  
  // Prevent the form from submitting and reloading the page
  return false;
});


  
</script>


