 <script>
function validateQuantity(input) {
  const enteredQuantity = parseInt(input.value);
  const maxQuantity = parseInt(input.getAttribute('max'));

  if (enteredQuantity < 1 || enteredQuantity > maxQuantity) {
    document.getElementById('quantity-error').textContent = `Please enter a value between 1 to ${maxQuantity}.`;
    input.setCustomValidity(`Please enter a value between 1 t ${maxQuantity}.`);
  } else {
    document.getElementById('quantity-error').textContent = '';
    input.setCustomValidity('');
  }
}
</script>


