/* Style for all buttons */
button.stext-106 {
  background-color: #fff;
  border: 1px solid #ccc;
  color: #666;
  padding: 10px 20px;
  cursor: pointer;
  transition: all 0.3s ease;
}

/* Style for active button */
button.stext-106.active {
  background-color: #333;
  color: #fff;
}

/* Style for dimmed button */
button.stext-106.dimmed {
  opacity: 0.5;
}

/* Style for hover effect */
button.stext-106:hover:not(.active):not(.dimmed) {
  background-color: #f5f5f5;
}

            </style>



            <script>
              // Get all buttons
var btns = document.querySelectorAll('button.stext-106');

// Add click event listener to each button
btns.forEach(function(btn) {
  btn.addEventListener('click', function() {
    // Remove active and dimmed classes from all buttons
    btns.forEach(function(btn) {
      btn.classList.remove('active');
      btn.classList.remove('dimmed');
    });

    // Add active class to the clicked button
    this.classList.add('active');

    // Add dimmed class to the other buttons
    btns.forEach(function(btn) {
      if (btn !== this) {
        btn.classList.add('dimmed');
      }
    }, this);
  });
});

            </script>