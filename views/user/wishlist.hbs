<!-- breadcrumb -->
<div class="container">
  <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
    <a href="/" class="stext-109 cl8 hov-cl1 trans-04">
      Home
      <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
    </a>

    <span class="stext-109 cl4">
      Wishlist
    </span>
  </div>
</div>
{{#if products}}

<!-- Shoping Cart -->
<form class="bg0 p-t-75 p-b-85">
  <div class="container">
    <div class="row">
      <div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
        <div class="m-l-25 m-r--38 m-lr-0-xl">
          <div class="wrap-table-shopping-cart">
            <table class="table-shopping-cart">
              <tr class="table_head">
                <th class="column-1">Product</th>
                <th class="column-2"></th>
                <th class="column-3">Price</th>
                <th class="column-4"></th>
                <th class="column-5"></th>
              </tr>

              {{#each products}}

                <tr class="table_row">
                  <td class="column-1">
                    <div class="how-itemcart1">

                      {{#limit productId.image 1}}
                      <img
                        src="admin/assets/img/products/{{this}}"
                        alt="IMG"
                      />
                        {{/limit}}
                    </div>
                  </td>
                  <td class="column-2">{{productId.name}}</td>
                  <td class="column-3">{{productId.price}}</td>

                  <td class="column-5"><button class="btn btn-secondary"><a
                        style="text-decoration: none; color: #ffff;"
                        href="/addCartDeleteWishlist?id={{productId._id}}"
                      >Add To Cart</a></button></td>

                  <td class="column-5"><button class="btn btn-danger"><a
                        style="text-decoration: none; color: #ffff;"
                        href="/deleteWishlist?id={{productId._id}}"
                      >Delete</a></button></td>

                </tr>

              {{/each}}

            </table>
          </div>

        </div>
      </div>

    </div>
  </div>
</form>

{{else}}
<div style="height: 100vh; margin-left: 550px; margin-top:auto;">
  <h1>Your Wishlist is Empty</h1>
  <p>You haven't added any items to your Wishlist yet.</p>
  <a href="/shop">Continue Shopping</a>

		</div>

{{/if}}